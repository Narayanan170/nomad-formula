# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start with  defaults from defaults.sls ##}
{% import_yaml 'nomad/defaults.yaml' as default_settings %}

{##
Setup variable using grains['os_family'] based logic, only add key:values here
that differ from whats in defaults.yaml
##}
{% set os_family_map = salt['grains.filter_by']({
        'Debian': {
            "git_pkg": 'git',
            "make_pkg": 'make'
        },
        'Suse': {},
        'Arch': {},
        'RedHat': {},
  }
  , grain="os_family"
  , merge=salt['pillar.get']('nomad:lookup'))
%}
{## Merge the flavor_map to the default settings ##}
{% do default_settings.nomad.update(os_family_map) %}

{## Merge in nomad:lookup pillar ##}
{% set nomad = salt['pillar.get'](
        'nomad',
        default=default_settings.nomad,
        merge=True
    )
%}
